<wwl:CheckedWindow x:Class="CheckedControlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wwl="clr-namespace:WpfWindowsLib;assembly=WpfWindowsLib"
        mc:Ignorable="d"
        Title="Checked Controls Sample" Width="500" SizeToContent="Height">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto" MinHeight="25"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.Resources>
      <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="4,2,4,2" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Bold" />
      </Style>
      <Style TargetType="Button">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:CheckedAutoCompleteBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:CheckedCheckBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:CheckedComboBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:CheckedDatePicker">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:CheckedTextBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:DecimalTextBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:EmailTextBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:IntTextBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      <Style TargetType="wwl:PhoneTextBox">
        <Setter Property="Margin" Value="4,2,4,2" />
      </Style>
      
    </Grid.Resources>
    <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Fill="Gainsboro"/>
    <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="10" Fill="Gainsboro"/>
    <Rectangle Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="4" Fill="LightGray"/>
    <Rectangle Grid.Row="1" Grid.Column="2" Grid.RowSpan="8" Fill="WhiteSmoke"/>
    <TextBlock Grid.Row="0" Grid.Column="1" Text="Empty"/>
    <TextBlock Grid.Row="0" Grid.Column="2" Text="Required"/>
    <TextBlock Grid.Row="0" Grid.Column="3" Text="Changed"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="AutoCompleteBox"/>
    <wwl:CheckedAutoCompleteBox Grid.Row="1" Grid.Column="1" x:Name="NormalAutoCompleteBox"/>
    <wwl:CheckedAutoCompleteBox Grid.Row="1" Grid.Column="2" x:Name="RequiredAutoCompleteBox"/>
    <wwl:CheckedAutoCompleteBox Grid.Row="1" Grid.Column="3" x:Name="ChangedCompleteBox"/>

    <TextBlock Grid.Row="2" Grid.Column="0" Text="CheckBox"/>
    <wwl:CheckedCheckBox Grid.Row="2" Grid.Column="1" x:Name="NormalCheckBox" VerticalAlignment="Center"/>
    <wwl:CheckedCheckBox Grid.Row="2" Grid.Column="2" x:Name="RequiredCheckBox"/>
    <wwl:CheckedCheckBox Grid.Row="2" Grid.Column="3" x:Name="ChangedCheckBox"/>

    <TextBlock Grid.Row="3" Grid.Column="0" Text="ComboBox"/>
    <wwl:CheckedComboBox Grid.Row="3" Grid.Column="1" x:Name="NormalComboBox"/>
    <wwl:CheckedComboBox Grid.Row="3" Grid.Column="2" x:Name="RequiredComboBox"/>
    <wwl:CheckedComboBox Grid.Row="3" Grid.Column="3" x:Name="ChangedComboBox"/>

    <TextBlock Grid.Row="4" Grid.Column="0" Text="DatePicker"/>
    <wwl:CheckedDatePicker Grid.Row="4" Grid.Column="1" x:Name="NormalDatePicker"/>
    <wwl:CheckedDatePicker Grid.Row="4" Grid.Column="2" x:Name="RequiredDatePicker"/>
    <wwl:CheckedDatePicker Grid.Row="4" Grid.Column="3" x:Name="ChangedDatePicker"/>

    <TextBlock Grid.Row="5" Grid.Column="0" Text="TextBox"/>
    <wwl:CheckedTextBox Grid.Row="5" Grid.Column="1" x:Name="NormalTextBox"/>
    <wwl:CheckedTextBox Grid.Row="5" Grid.Column="2" x:Name="RequiredTextBox"/>
    <wwl:CheckedTextBox Grid.Row="5" Grid.Column="3" x:Name="ChangedTextBox"/>

    <TextBlock Grid.Row="6" Grid.Column="0" Text="Decimal TextBox"/>
    <wwl:DecimalTextBox Grid.Row="6" Grid.Column="1" x:Name="NormalDecimalTextBox"/>
    <wwl:DecimalTextBox Grid.Row="6" Grid.Column="2" x:Name="RequiredDecimalTextBox"/>
    <wwl:DecimalTextBox Grid.Row="6" Grid.Column="3" x:Name="ChangedDecimalTextBox"/>

    <TextBlock Grid.Row="7" Grid.Column="0" Text="Email TextBox"/>
    <wwl:EmailTextBox Grid.Row="7" Grid.Column="1" x:Name="NormalEmailTextBox"/>
    <wwl:EmailTextBox Grid.Row="7" Grid.Column="2" x:Name="RequiredEmailTextBox"/>
    <wwl:EmailTextBox Grid.Row="7" Grid.Column="3" x:Name="ChangedEmailTextBox"/>

    <TextBlock Grid.Row="8" Grid.Column="0" Text="Integer TextBox"/>
    <wwl:IntTextBox Grid.Row="8" Grid.Column="1" x:Name="NormalIntTextBox"/>
    <wwl:IntTextBox Grid.Row="8" Grid.Column="2" x:Name="RequiredIntTextBox"/>
    <wwl:IntTextBox Grid.Row="8" Grid.Column="3" x:Name="ChangedIntTextBox"/>

    <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" FontWeight="Normal" TextWrapping="Wrap"
               Text="">
      Save button is only enabled when all required controls have a value.<LineBreak/>
      User can only close Window when all changed data is "saved".
    </TextBlock>
    <Button Grid.Row="9" Grid.Column="3" x:Name="SaveButton" Content="_Save"/>
  </Grid>
</wwl:CheckedWindow>
