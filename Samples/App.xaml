<!--
             StartupUri="MainWindow.xaml">
             StartupUri="CheckedTextBoxWindow.xaml">
             StartupUri="DecimalTextBoxWindow.xaml">
-->
<Application x:Class="Samples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="DecimalTextBoxWindow.xaml">
  <Application.Resources>
    <SolidColorBrush x:Key="GridBackground" Color="#E8E8E8" />
    <SolidColorBrush x:Key="LabelBackground" Color="#D0D0D0" />
    <SolidColorBrush x:Key="PanelBackground" Color="#B0B0B0" />

    <Style TargetType="Label">
      <Setter Property="HorizontalContentAlignment" Value="Left"/>
      <Setter Property="HorizontalAlignment" Value="Left"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Margin" Value="4,2,4,2"/>
      <Setter Property="Padding" Value="0"/>
    </Style>
    <Style TargetType="CheckBox">
      <Setter Property="HorizontalContentAlignment" Value="Left"/>
      <Setter Property="HorizontalAlignment" Value="Left"/>
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Margin" Value="4,2,4,2"/>
    </Style>
    <Style TargetType="TextBox">
      <Setter Property="HorizontalContentAlignment" Value="Left"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Margin" Value="4,2,4,2"/>
    </Style>
    <Style TargetType="Button">
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Margin" Value="4,2,4,2"/>
    </Style>

  </Application.Resources>
</Application>
