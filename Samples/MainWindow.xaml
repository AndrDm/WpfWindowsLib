<Window x:Class="Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples"
        mc:Ignorable="d"
        Title="Samples" SizeToContent="WidthAndHeight">
  <StackPanel>
    <Button Content="CheckedTextBox" x:Name="CheckedTextBoxButton"/>
    <Button Content="DecimalTextBox" x:Name="DecimalTextBoxButton"/>
    <Button Content="IntTextBox" x:Name="IntTextBoxButton"/>
    <Button Content="EmailTextBox" x:Name="EmailTextBoxButton"/>
    <Button Content="PhoneTextBox" x:Name="PhoneTextBoxButton"/>
  </StackPanel>
</Window>
